MONGO_URI=your_mongo_uri_here
JWT_SECRET=your_jwt_secret_here
PORT=5000

# TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here


TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_VERIFY_SID=your_twilio_verify_sid_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_WHATSAPP_NUMBER=whatsapp:your_twilio_whatsapp_number_here
MESSAGING_SERVICE_SID=your_messaging_service_sid_here
ORGANIZATION_SID=your_organization_sid_here
TEMPLATE_SID=your_template_sid_here

# === WINSMS SMS GATEWAY (TUNISIA) ===
# Service SMS pour les numéros tunisiens (+216)
# Obtenez vos clés depuis https://www.winsms.tn/
WINSMS_API_KEY=your_winsms_api_key_here
WINSMS_SENDER_ID=your_sender_id_here
WINSMS_API_URL=https://api.winsms.tn/v1/sms/send

# === FLOUCI PAYMENT GATEWAY ===
# Obtenez vos clés depuis https://developers.flouci.com/
# Ces clés sont obligatoires pour fonctionner avec le service de paiement Flouci
# CRITICAL: These values MUST be set before starting the server, or it will exit
FLOUCI_PUBLIC_KEY=your_public_key_here
FLOUCI_PRIVATE_KEY=your_private_key_here
FLOUCI_DEVELOPER_TRACKING_ID=amigos_app

# === CLICTOPAY PAYMENT GATEWAY (SMT TUNISIA) ===
# Obtenez vos identifiants depuis votre console ClickToPay
# IMPORTANT: Le mot de passe doit être changé lors de la première connexion
# Voir Docs/CLICTOPAY_CREDS_SETUP.md pour le guide complet de configuration
# 
# Environnement de test:
# - Console: https://test.clictopay.com/epg/gui/#login
# - API URL: https://test.clictopay.com/payment/rest
# - Username API: 100009705 (fourni par SMT)
# - Password: À définir après le premier changement obligatoire
#
# CRITICAL: Ces valeurs DOIVENT être définies avant de démarrer le serveur
CLICTOPAY_API_URL=https://test.clictopay.com/payment/rest
CLICTOPAY_USERNAME=100009705
CLICTOPAY_PASSWORD=your_new_password_here

# URL de base du backend (utilisée pour les redirections Flouci et autres webhooks)
# CRITICAL: Must be a publicly reachable HTTPS URL for Flouci payment redirects to work
# Flouci needs to be able to reach: BACKEND_URL/api/payments/flouci-success and BACKEND_URL/api/payments/flouci-failure
# 
# Options:
# 1. Production: https://yourdomain.com (your deployed domain)
# 2. Development with ngrok tunnel: https://abc123.ngrok.io (tunnel to localhost:5000)
# 3. Local only (NOT suitable for real payments): http://localhost:5000
#
# IMPORTANT: If this is not set or is private/unreachable, the server will exit
BACKEND_URL=https://yourdomain.com

# URL du webhook Flouci pour les notifications de statut de paiement (optionnel)
# Sera appelée par Flouci pour notifier des changements de statut de paiement
FLOUCI_WEBHOOK_URL=https://yourdomain.com/api/payments/flouci-webhook